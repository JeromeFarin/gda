{% extends 'base.html.twig' %}

{% block title %}{{ category.name }}{% endblock %}

{% block body %}
    <h1>{{ category.name }}</h1>

    <ul>
        {% for book in category.books %}
            <li>
                <a href="{{ path('book_show_front', {id: book.id, slug: book.slug}) }}">{{ book.isbn }} - {{ book.title }}</a> {{ book.price }}$
            </li>
        {% endfor %}
    </ul>
{% endblock %}
