<form method="post" action="{{ path('editor_delete', {'id': editor.id}) }}" onsubmit="return confirm('{% trans %}Are you sure you want to delete this item?{% endtrans %}');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ editor.id) }}">
    <button class="btn btn-primary mt-2 mb-4">{% trans %}Delete{% endtrans %}</button>
</form>
