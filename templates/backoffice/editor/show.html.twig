{% extends 'base.html.twig' %}

{% block title %}Editor{% endblock %}

{% block body %}
    <h1>Editor</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ editor.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ editor.name }}</td>
            </tr>
            <tr>
                <th>FoundationYear</th>
                <td>{{ editor.foundationYear }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('editor_edit', {'id': editor.id}) }}" class="btn btn-primary">Edit</a>

    <a href="{{ path('editor_index') }}" class="btn btn-secondary">back to list</a>

    {{ include('backoffice/editor/_delete_form.html.twig') }}
{% endblock %}
