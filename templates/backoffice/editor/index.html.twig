{% extends 'base.html.twig' %}

{% block title %}{% trans %}Editors{% endtrans %}{% endblock %}

{% block body %}
    <h1>{% trans %}Editors{% endtrans %}</h1>

    <table class="table">
        <thead>
            <tr>
                <th>{% trans %}Id{% endtrans %}</th>
                <th>{% trans %}Name{% endtrans %}</th>
                <th>{% trans %}FoundationYear{% endtrans %}</th>
                <th>{% trans %}actions{% endtrans %}</th>
            </tr>
        </thead>
        <tbody>
        {% for editor in editors %}
            <tr>
                <td>{{ editor.id }}</td>
                <td>{{ editor.name }}</td>
                <td>{{ editor.foundationYear }}</td>
                <td>
                    <a href="{{ path('editor_show', {'id': editor.id}) }}"><span class="material-icons">visibility</span></a>
                    <a href="{{ path('editor_edit', {'id': editor.id}) }}"><span class="material-icons">edit</span></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">{% trans %}no records found{% endtrans %}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('editor_new') }}" class="btn btn-primary">{% trans %}Create new{% endtrans %}</a>
{% endblock %}
