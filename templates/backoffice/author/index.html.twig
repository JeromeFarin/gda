{% extends 'base.html.twig' %}

{% block title %}{% trans %}Authors{% endtrans %}{% endblock %}

{% block body %}
    <h1>{% trans %}Authors{% endtrans %}</h1>

    <table class="table">
        <thead>
            <tr>
                <th>{% trans %}Id{% endtrans %}</th>
                <th>{% trans %}Firstname{% endtrans %}</th>
                <th>{% trans %}Lastname{% endtrans %}</th>
                <th>{% trans %}Birthday{% endtrans %}</th>
                <th>{% trans %}actions{% endtrans %}</th>
            </tr>
        </thead>
        <tbody>
        {% for author in authors %}
            <tr>
                <td>{{ author.id }}</td>
                <td>{{ author.firstname }}</td>
                <td>{{ author.lastname }}</td>
                <td>{{ author.birthday ? author.birthday|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('author_show', {'id': author.id}) }}"><span class="material-icons">visibility</span></a>
                    <a href="{{ path('author_edit', {'id': author.id}) }}"><span class="material-icons">edit</span></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">{% trans %}no records found{% endtrans %}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('author_new') }}" class="btn btn-primary">{% trans %}Create new{% endtrans %}</a>
{% endblock %}
