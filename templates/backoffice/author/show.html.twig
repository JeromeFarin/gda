{% extends 'base.html.twig' %}

{% block title %}{% trans %}Author{% endtrans %}{% endblock %}

{% block body %}
    <h1>{% trans %}Author{% endtrans %}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>{% trans %}Id{% endtrans %}</th>
                <td>{{ author.id }}</td>
            </tr>
            <tr>
                <th>{% trans %}Firstname{% endtrans %}</th>
                <td>{{ author.firstname }}</td>
            </tr>
            <tr>
                <th>{% trans %}Lastname{% endtrans %}</th>
                <td>{{ author.lastname }}</td>
            </tr>
            <tr>
                <th>{% trans %}Birthday{% endtrans %}</th>
                <td>{{ author.birthday ? author.birthday|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('author_edit', {'id': author.id}) }}" class="btn btn-primary">{% trans %}Edit{% endtrans %}</a>

    <a href="{{ path('author_index') }}" class="btn btn-secondary">{% trans %}back to list{% endtrans %}</a>

    {{ include('backoffice/author/_delete_form.html.twig') }}
{% endblock %}
