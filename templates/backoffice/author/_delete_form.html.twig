<form method="post" action="{{ path('author_delete', {'id': author.id}) }}" onsubmit="return confirm('{% trans %}Are you sure you want to delete this item?{% endtrans %}');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ author.id) }}">
    <button class="btn btn-primary mt-2">{% trans %}Delete{% endtrans %}</button>
</form>
