{% extends 'base.html.twig' %}

{% block title %}{% trans %}Categories{% endtrans %}{% endblock %}

{% block body %}
    <h1>{% trans %}Categories{% endtrans %}</h1>

    <table class="table">
        <thead>
            <tr>
                <th>{% trans %}Id{% endtrans %}</th>
                <th>{% trans %}Name{% endtrans %}</th>
                <th>{% trans %}Slug{% endtrans %}</th>
                <th>{% trans %}Level{% endtrans %}</th>
                <th>{% trans %}actions{% endtrans %}</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td>{{ category.slug }}</td>
                <td>{{ category.level }}</td>
                <td>
                    <a href="{{ path('category_show', {'id': category.id}) }}"><span class="material-icons">visibility</span></a>
                    <a href="{{ path('category_edit', {'id': category.id}) }}"><span class="material-icons">edit</span></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">{% trans %}no records found{% endtrans %}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('category_new') }}" class="btn btn-primary">{% trans %}Create new{% endtrans %}</a>
{% endblock %}
