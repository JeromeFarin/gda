{% extends 'base.html.twig' %}

{% block title %}{% trans %}Category{% endtrans %}{% endblock %}

{% block body %}
    <h1>{% trans %}Category{% endtrans %}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>{% trans %}Id{% endtrans %}</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>{% trans %}Name{% endtrans %}</th>
                <td>{{ category.name }}</td>
            </tr>
            <tr>
                <th>{% trans %}Slug{% endtrans %}</th>
                <td>{{ category.slug }}</td>
            </tr>
            <tr>
                <th>{% trans %}Level{% endtrans %}</th>
                <td>{{ category.level }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('category_edit', {'id': category.id}) }}" class="btn btn-primary">{% trans %}Edit{% endtrans %}</a>

    <a href="{{ path('category_index') }}" class="btn btn-secondary">{% trans %}back to list{% endtrans %}</a>

    {{ include('backoffice/category/_delete_form.html.twig') }}
{% endblock %}
